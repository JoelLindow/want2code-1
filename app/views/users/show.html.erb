Name: <%= @user.username %>
Email: <%= @user.email %>
About: <%= @user.about %>
Cover Letter: <%= @user.cover_letter %>
City: <%= @user.city %>
State: <%= @user.state %>

<% if @user.id == current_user.id %>
  <h4>Create a Skill</h4>
  <%= render partial: "skills/form" %>
<% end %>

<br/>
<h4>All Skills for <strong><%= @user.username %></strong></h4>
<%= render partial: "skills/skill", collection: @user.skills %>

<% if current_user.role == 'admin' %>
  <small> <%= link_to "Delete User", user_path(@user), method: :delete %> </small>
<% end %>
<small> <%= link_to "Edit", user_path(@user) %> </small>