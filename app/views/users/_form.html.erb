<%= form_for @user do |f| %>
  <%= f.label :username %>
  <%= f.text_field :username %>

  <%= f.label :password %>
  <%= f.text_field :password %>

  <%= f.label :avatar_url %>
  <%= f.text_field :avatar_url %>

  <%= f.label :email %>
  <%= f.text_field :email %>

  <%= f.label :about %>
  <%= f.text_area :about %>

  <%= f.label :cover_letter %>
  <%= f.text_area :cover_letter %>

  <%= f.label :city %>
  <%= f.text_field :city %>

  <%= f.label :state %>
  <%= f.text_field :state %>

  <%= f.submit %>
<% end %>
